@model dynamic

@{
    ViewBag.Title = "UVa";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th rowspan="2">#</th>
            <th rowspan="2">Name</th>
            <th rowspan="2">Username</th>
            <th rowspan="2">Accepted</th>
            <th rowspan="2">No. of Submissions</th>
            <th colspan="3">Last Submission</th>
            <th rowspan="2">UVa Rank</th>
        </tr>
        <tr>
            <th>Problem</th>
            <th>Verdict</th>
            <th>Datetime</th>
        </tr>
    </thead>
    <tbody>

        @{int i = 1;}
        @foreach (dynamic item in Model)
        {
            <tr>
                <td align='center' width='3%'>@(i++)</td>
                <td>@item.name</td>
                <td><a href="@item.usernameLink">@item.username</a></td>
                <td align='center'>@item.AC</td>
                <td align='center' width='8%'>@item.NOS</td>
                <td><a href="@item.problemLink">@item.lastProblem</a></td>
                <td>@item.lastVerdict</td>
                <td align='center'>@item.lastDate</td>
                <td align='center'>@item.rank</td>
            </tr>
        }

    </tbody>
</table>
